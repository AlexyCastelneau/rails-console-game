<div class="dark-bkg">
  <div class="centered-container">
    <div class="profile-container">
      <div class="user-info">
        <h2><%= current_user.username %></h2>
        <h4><%= current_user.email %></h4>
      </div>
      <% if params[:display] == "true" %>
        <h2>Characters</h2>
        <div class="characters-container">
          <% @current_user_characters.each do |character| %>
            <%= render "./shared/character_info", character: character %>
          <% end %>
        </div>
        <%= link_to "Hide Characters", profile_path(:display => false), class: "profile-btn" %>
      <% else %>
        <%= link_to "Show Characters", profile_path(:display => true), class: "profile-btn" %>
      <% end %>
    </div>
    <%= link_to "Back to Menu", "/", class: "back-btn" %>
  </div>
</div>
