<div class="dark-bkg">
  <div class="centered-container">
    <div class="devise-form">
      <h2>Log in</h2>
      <div>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name),data: {turbo: false}) do |f| %>
          <%= f.label :email, class: "form-label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-field" %>

          <%= f.label :username, class: "form-label" %>
          <%= f.text_field :username, autocomplete: "username", class: "form-field" %>

          <%= f.label :password, class: "form-label" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "form-field" %>

          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me, class: "form-check-box" %>
              <%= f.label :remember_me, class: "form-label" %>
            </div>
          <% end %>

          <%= f.button :"Log in", class: "form-btn" %>
        <% end %>
        <div class="link">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
